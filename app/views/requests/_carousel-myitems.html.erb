
<div id="carouselCardControls" class="carousel" data-ride="carousel">

  <div class="carousel-inner">


<% @my_items.each do |my_item| %>
      <% if my_item == @my_items.first %>
        <div class="carousel-item active">
            <div class="card-product-myitems" data-controller="edit-item" data-edit-item-target="card" >
              <%= cl_image_tag my_item.picture.key, class:"d-block w-100" %>
              <div class="card-product-infos" data-edit-item-target="infos">
                <h2><%=my_item.name %> </h2>
                <p><%=my_item.description %></p>
              </div>
            </div>
        </div>
      <%else%>

        <div class="carousel-item">
          <div class="card-product-myitems" data-controller="edit-item" data-edit-item-target="card" >
            <%= cl_image_tag my_item.picture.key, class:"d-block w-100" %>
            <div class="card-product-infos" data-edit-item-target="infos">
              <h2><%=my_item.name %> </h2>
              <p><%=my_item.description %></p>
            </div>
          </div>
        </div>

      <%end%>
   <%end%>


  </div>

</div>

  <a class="carousel-control-prev" href="#carouselCardControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselCardControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
