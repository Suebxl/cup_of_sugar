<div class="card-grid">
  <% @my_requests.each do |r| %>
    <div class="card-product-borrowing-lending">

      <div class="card-product-infos">
      <%= cl_image_tag r.item.picture.key, class:"avatar" %>
        <h2><%=r.item.name %> </h2>
      </div>

      <div class="request-infos">
        <h2>Borrowing from <%=r.item.user.name %> </h2>
        <p>from <%= r.start_date %> </p>
        <p>to <%= r.end_date%> </p>
      </div>

      <div class="request-infos status">
        <% if r.status == 'approved' %>
        <p class="approved"><i class="far fa-check-circle"></i> <em>approved</em></p>
        <% elsif r.status == 'pending' %>
        <p class ="pending" ><i class="fas fa-spinner"> <em>pending</em> </i></p>
        <% else %>
        <p class ="declined"><i class="far fa-x"><em>declined</em></i></p>
        <% end %>
      </div>

      <div class = "request-infos">
        <%= link_to "Cancel your request", request_path(r), method: :delete, data: {confirm: "Delete this item?"} %>
      </div>

    </div>
  <% end %>
</div>
