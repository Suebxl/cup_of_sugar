<div class="container">
  <div class="container d-flex p-2">
    <div class="card-item">
      <%# <%= image_tag(@item.picture) unless @item.picture.nil? %>
      <%= cl_image_tag @item.picture.key%>
      <div class="item-info">
        <div class="item-frame">
          <h2><%= @item.name %></h2>
          <div class="rating">
            <i class="fab fa-gratipay cherry"></i>
            <i class="fab fa-gratipay cherry"></i>
            <i class="fab fa-gratipay cherry"></i>
            <i class="fab fa-gratipay light-gray"></i>
          </div>
        </div>
        <p class="description" > <%= @item.description %> </p>
        <div class="item-frame">
          <h2>Reserve me</h2>
          <span class="iconify" data-icon="bx:calendar" style="color: #d68b8b;"></span>
        </div>

        <% if current_user != @owner  && !current_user.nil?%>
          <%= simple_form_for [@item, @request] do |f| %>
          <div class="calendar">
            <div class="calendar-dates">
            <%= f.input :start_date, as: :date , html5: true %>
            <%= f.input :end_date, as: :date, html5: true%>
            </div>
            <%= f.submit "Reserve", id: "#myModal", class:"button-gold", data: { toggle:"modal", target:"#myModal"} %>
          <% end %>
        <% else %>
          <p>You can't reserve your own stuff ðŸ˜‰ </p>
        <% end %>
          </div>
      </div>
    </div>

 <!-- Modal HTML -->
            <div id="myModal" class="modal fade">
              <div class="modal-dialog modal-confirm">
                <div class="modal-content">
                  <div class="modal-header justify-content-center">
                    <div class="icon-box">
                      <i class="material-icons">&#xE876;</i>
                    </div>
                  </div>
                  <div class="modal-body text-center">
                    <h4>Nice!</h4>
                    <p>You've successfully sent a request.</p>
                  </div>
                </div>
              </div>
            </div>

    <div class="chatbox">
      <div>
      <h2>Chat with Suzanne</h2>
      <div class="chats">
          <div class="chat">
            <%= image_tag "suzanne.jpg" , class: "avatar"%>
            <p class="chat-text"> Hello, nice to meet you. How can I help you?</p>
          </div>
          <div class="chat">
            <p class="chat-text"> Hello, could I borrow your drill for the weekend? thanks</p>
            <%= image_tag "jfnumainville.jpg" , class: "avatar"%>
          </div>
        </div>
      </div>
      <p class="chat-text">Say something ...</p>
    </div>
  </div>
  <div class="mt-3 p-2">
    <h4> Other items of <%= @owner.name %> </h4>
    <div class="card-grid mt-5">
    <% @other_items_by_owner.each do |item| %>
      <%=  link_to item_path(item) do%>
        <div class="card-product">
          <%= cl_image_tag item.picture.key %>
          <div class="card-product-infos">
            <h2><%= item.name %></h2>
            <p><%= item.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
