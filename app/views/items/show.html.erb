<div class="container">
  <div class="container d-flex p-2">
    <div class="card-item">
      <%= image_tag("bosch.jpg")%>
      <div class="item-info">
        <div class="item-frame">
          <h2>Item name</h2>
          <div class="rating">
            <p>4</p>
            <span class="iconify" data-icon="charm:cube" style="color: #d68b8b;"></span>
          </div>
        </div>
        <p class="description" > Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum in consectetur neque. </p>
        <div class="item-frame">
          <h2>Reserve me</h2>
          <span class="iconify" data-icon="bx:calendar" style="color: #d68b8b;"></span>
        </div>

        <% if current_user != @owner  && !current_user.nil?%>
          <%= simple_form_for [@item, @request] do |f| %>
          <div class="calendar">
            <div class="calendar-dates">
            <%= f.input :start_date, as: :date , html5: true %>
            <%= f.input :end_date, as: :date, html5: true%>
            </div>
            <%= f.submit "Reserve", class: "button-gold" %>
          <% end %>
        <% end %>
          </div>
      </div>
    </div>
    <div class="chatbox">
      <div>
      <h2>Chat with Suzanne</h2>
      <div class="chats">
          <div class="chat">
            <%= image_tag "suzanne.jpg" , class: "avatar"%>
            <p class="chat-text"> Hello, nice to meet you. How can I help you?</p>
          </div>
          <div class="chat">
            <p class="chat-text"> Hello, could I borrow your drill for the weekend? thanks</p>
            <%= image_tag "jfnumainville.jpg" , class: "avatar"%>
          </div>
        </div>
      </div>
      <p class="chat-text">Say something ...</p>
    </div>
  </div>
  <div class="mt-3 p-2">
    <h4> Other items of Suzanne </h4>
    <div class="card-grid mt-5">
      <div class="card-product">
        <%= image_tag("bosch.jpg")%>
        <div class="card-product-infos">
          <h2>Bosch tool </h2>
          <p>nice.</p>
        </div>
      </div>
      <div class="card-product">
        <%= image_tag("bosch.jpg")%>
        <div class="card-product-infos">
          <h2>Bosch tool </h2>
          <p>nice.</p>
        </div>
      </div>
    </div>
  </div>
</div>
