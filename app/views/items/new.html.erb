<div class="container d-flex justify-content-around">
<%= image_tag("illustration.jpg", height:400, width:400) %>
  <div class="form">
    <%= simple_form_for (@item) do |f|%>
      <%= f.input :name, :label => "What item will you lend ?" %>
      <%= f.input :category, :collection => ["Books", "Holidays", "Furnitures", "Garden", "Home decoration", "Kitchen", "Special events", "Sports", "Tools", "Toys"], :label => 'Select a Category'%>
      <%= f.input :description, :label => 'Description', :hint => 'Hint: write an original description to stand out' %>
      <%= f.input :picture, as: :file, :hint => 'Hint: Good quality pictures attract greater attention' %>
      <%= f.submit "Submit", id:"sweet-alert-create", class:"button-gold", data: { toggle:"modal", target:"#myModal"}%>
    <% end %>
  </div>
</div>


<%= link_to "", requests_path(active_tab: "items"),  id: "create-link", class: "hidden" %>
