<div class="container" data-controller="search-items">
  <h1>Lend to and borrow from your neighbours</h1>
<%# search-bar %>
  <div class="search-bar">
    <div class="search-form-control form-group">
  <%= form_tag root_path, method: :get, data: { search_items_target: 'form' } do %>
   <%= text_field_tag :query,
                      params[:query],
                      class: "form-control string required",
                      placeholder: "What do you want to borrow?"
                      %>
    <%# <input class="form-control string required" type="text" name="search[query]" id="search_query" /> %>
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i></button>
  </div>
 <% end %>
  </div>
  <br>

  <div class="categories">
      <%= link_to "Books", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Holidays", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Furnitures", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Garden", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Home decoration", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Kitchen", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Special events", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Sports", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Tools", "#", class: "button-gold", data: { action: 'search-items#update'} %>
      <%= link_to "Toys", "#", class: "button-gold", data: { action: 'search-items#update'} %>
  </div>
<%# map %>
<br>
<div style="width: 40%; height: 200px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<h1>Borrow near you </h1>

  <%= render 'list', items: @items %>
</div>
